    private void btnSignUpActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String UserName = txtUserName.getText();
        String PassWord = new String(pwdPassword.getPassword());
        String confirmPass = new String(pwdConfirm.getPassword());
        
        if (PassWord.equals(confirmPass)) {
            JOptionPane.showMessageDialog(this, "Đăng kí thành công", "Sign up successfully", JOptionPane.INFORMATION_MESSAGE);
            ghiFile(UserName, PassWord);
            java.awt.EventQueue.invokeLater(new Runnable() {
                public void run() {
                    ASSIGNMENT ass = new ASSIGNMENT();
                    ass.setVisible(true);
                }
            });
            this.dispose();
        } else {
            JOptionPane.showMessageDialog(this, "Mật khẩu xác nhận không đúng!", "ERROR", JOptionPane.ERROR_MESSAGE);
        }

    }                                         

    private void btnSignInActionPerformed(java.awt.event.ActionEvent evt) {                                          
        java.awt.EventQueue.invokeLater(new Runnable() {
            public void run() {
                ASSIGNMENT ass = new ASSIGNMENT();
                ass.setVisible(true);
            }
        });
        this.dispose();
    }                                         
    private void ghiFile(String userName, String password) {
        try {
            BufferedWriter writer = new BufferedWriter(new FileWriter("userinfo.txt", true));
            writer.write("Username: " + userName + ", Password: " + password);
            writer.newLine();
            writer.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

